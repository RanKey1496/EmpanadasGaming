<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#FFFFFF"
    tools:context="co.edu.udem.lenguajes2.empanadasgaming.SummonerDataActivity" >

    <ImageView
        android:id="@+id/ivProfileIconId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/a0" />

    <TextView
        android:id="@+id/txtSummonerLvl"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_below="@+id/ivProfileIconId"
        android:layout_marginLeft="15dp"
        android:text="30"
        android:textSize="80sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/txtSummonerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSummonerLvl"
        android:layout_below="@+id/txtSummonerLvl"
        android:text="@string/txtSummonerName"
        android:textSize="20sp" />

        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lvTeams"
        android:layout_alignTop="@+id/ivProfileIconId"
        android:text="@string/txtTeamRankeds" />
    
    <ListView
        android:id="@+id/lvTeams"
        android:layout_width="200dp"
        android:layout_height="195dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:divider="@android:color/transparent" >
    </ListView>

</RelativeLayout>
